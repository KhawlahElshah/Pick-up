<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calculatecostbg"
    android:layout_margin="20dp"
    android:stretchColumns="0"
    android:shrinkColumns="1"


    >

    <TableRow
        android:layout_weight="2.0"

        >

        <TextView

            android:text="Enter your moving location:"
            android:textSize="25dp"
            android:background="#6e6d6d"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:layout_gravity="center"
            android:alpha="2.0"
            android:layout_span="2"
            />

    </TableRow>

    <TableRow
        android:gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1.0"
        >

        <TextView
            android:text="Moving from"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:background="#6e6d6d"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_column="0"
            android:layout_weight="1.0"

            />

        <EditText
            android:hint="city, street"
            android:background="#FFFFFF"
            android:textSize="25dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_column="1"

            />

    </TableRow>

    <TableRow
        android:gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1.0"


        >

        <TextView
            android:text="Moving to"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:background="#6e6d6d"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_column="0"
            android:layout_weight="1.0"

            />

        <EditText
            android:hint="city, street"
            android:background="#FFFFFF"
            android:textSize="25dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_column="1"
            />

    </TableRow>

    <TableRow
        android:gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1.0"

        >

        <TextView
            android:text="Moving catagory"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:background="#6e6d6d"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_column="0"
            android:layout_weight="1.0"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            />

        <Spinner
            android:background="#FFFFFF"
            android:prompt="@string/catagories_prompt"
            android:entries="@array/catagories_array"
            android:layout_width="match_parent"
            android:layout_height="45dp"


            >

        </Spinner>

    </TableRow>

    <TableRow
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1.0"
        >

        <Button
            android:id="@+id/costestimate"
            android:background="#e8c816"
            android:text="Cost estimate"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:padding="10dp"
            />

    </TableRow>
</TableLayout>