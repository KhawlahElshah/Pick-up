<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:columnCount="3"
    android:rowCount="3"
    android:padding="6dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your catagory"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/green"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:padding="6dp"
        android:background="@drawable/bgline"
        >

        <Button
            android:id="@id/movingbtn"
            android:background="@drawable/move"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="Moves"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="bottom|center_horizontal"


            />



    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:padding="6dp"
        android:background="@drawable/bgline"
        >


        <Button

            android:background="@drawable/appliciance"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="HouseHold Applacince"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="bottom|center_horizontal"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:padding="6dp"
        android:background="@drawable/bgline"
        >



        <Button

            android:background="@drawable/animal"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="Animal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="bottom|center_horizontal"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:padding="6dp"
        android:background="@drawable/bgline"
        >



        <Button

            android:background="@drawable/car"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="Cars"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="bottom|center_horizontal"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:padding="6dp"
        android:background="@drawable/bgline"
        >



        <Button

            android:background="@drawable/container"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="Frieght"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="bottom|center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:padding="6dp"
        android:background="@drawable/bgline"
        >


        <Button

            android:background="@drawable/documents"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="Documents"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="bottom|center_horizontal"
            />
    </LinearLayout>


</GridLayout>