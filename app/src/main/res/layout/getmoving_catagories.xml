<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Choose your moving catagory"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:background="#2aa07a"
        android:textColor="#FFFFFF"
        />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:columnCount="3"
        android:rowCount="2">


        <LinearLayout
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageButton
                android:src="@drawable/move"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:background="#FFFFFF"
                />
            <TextView
                android:text="Moves"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageButton
                android:src="@drawable/appliciance"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:background="#FFFFFF"
                />
            <TextView
                android:text="HouseHold Items"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageButton
                android:src="@drawable/animal"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:background="#FFFFFF"
                />
            <TextView
                android:text="Animal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageButton
                android:src="@drawable/car"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:background="#FFFFFF"
                />
            <TextView
                android:text="Cars"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageButton
                android:src="@drawable/container"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:background="#FFFFFF"
                />
            <TextView
                android:text="Frieght"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageButton
                android:src="@drawable/documents"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:background="#FFFFFF"
                />
            <TextView
                android:text="Documents"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
        </LinearLayout>

    </GridLayout>
</LinearLayout>